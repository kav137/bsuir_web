doctype html
html
	include ../includes/head.pug
	body
		div(class='uk-grid')
			form(action='/api/photos/upload' method='post' enctype='multipart/form-data' class='uk-align-center uk-form uk-form-stacked uk-form')
				div(class='uk-form-row')
					label(for='description') Few words about this photo: 
					input(name='description' type='text' class='uk-input')
				div(class='uk-form-row')
					input(type='file' name='photo' value='Choose photo' class='uk-button uk-align-center')
				div(class='uk-form-row')
					input(type='submit' value='Submit' class='uk-button uk-align-center')